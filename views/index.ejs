<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dojos y Ninjas</title>
  <link rel="stylesheet" href="static/bootstrap.min.css">
  <script src="static/jquery-3.5.1.min.js"></script>
  <script src="static/bootstrap.bundle.min.js"></script>
  <script src="static/bootbox.min.js"></script>


  <script>

  </script>

</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-8 col-sm-12 offset-lg-3">
        <h2>Dojos y Ninjas</h2>

        <%if ( errores.length > 0 ) {%>

          <div class="alert alert-danger"><%= errores%></div>

        <%}%>


        <h5>Agregar DOJO:</h5>
        <form action="/dojo/new" method="POST">
          <div class="row">
            <div class="col"><label for="nombre" class="form-label">Nombre:</label></div>
            <div class="col-6"><input  type="text" class="form-control" id="nombre"  name="nombre"></div>
            <div class="col-2"><button type="submit" class="btn btn-primary">Enviar</button></div>
          </div>
        </form>

        <h5>Agregar NINJA:</h5>
        <form action="/ninja/new" method="POST">
          <div class="row">
            <div class="col-2"><label for="nombre" class="form-label">Nombre:</label></div>
            <div class="col-4"><input  type="text" class="form-control" id="nombre"  name="nombre"></div>
            <div class="col-3">

              <select class="form-select" name="dojo">
                <option value="">Selecciona un Dojo...</option>
               
                <% for (let dojo of dojos) { %>
                
                  <option value="<%= dojo.id %>"><%= dojo.nombre %></option>

                  <% } %>

              </select>

            </div>
            <div class="col-1"><button type="submit" class="btn btn-primary">Enviar</button></div>
          </div>
        </form>

        <ul>

          <% for (let dojo of dojos) { %>

            <li>
              <%= dojo.nombre%>
              <ul>
                <% for (let ninja of dojo.Ninjas) { %>
                  
                  <li><%= ninja.nombre%></li>
                <% } %>
              </ul>
            </li>

          <% } %>

        </ul>

      
      </div>
    </div>
  </div>
</body>

</html>